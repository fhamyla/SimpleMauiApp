<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SimpleMauiApp.MainPage"
             BackgroundColor="LightBlue">

    <VerticalStackLayout Spacing="20" Padding="30" HorizontalOptions="Center" VerticalOptions="Center">

        <!-- Title Text -->
        <Label Text="Hey!" 
           FontSize="36"
           HorizontalOptions="Center"
           TextColor="White" />

        <Label Text="I'm going to be your personal companion through all courses, what do I call you?" 
           FontSize="18"
           HorizontalOptions="Center"
           TextColor="White"
           HorizontalTextAlignment="Center" />

        <!-- Nickname Entry Field -->
        <Entry Placeholder="Choose a nickname..." 
           x:Name="NicknameEntry"
           FontSize="18"
           WidthRequest="300"
           HorizontalOptions="Center" />

        <!-- Confirm Button -->
        <Button Text="✔️" 
            FontSize="24"
            BackgroundColor="White"
            TextColor="Blue"
            CornerRadius="30"
            WidthRequest="60"
            HeightRequest="60"
            HorizontalOptions="Center"
            Clicked="OnConfirmClicked" />

    </VerticalStackLayout>
</ContentPage>