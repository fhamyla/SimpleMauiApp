<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleMauiApp.Lesson">
    <ScrollView>
        <VerticalStackLayout
        Padding="20"
        Spacing="30"
        BackgroundColor="White">

            <!-- Title -->
            <Label 
            Text="Hello, Welcome to the World of Operating System!" 
            FontSize="24" 
            FontAttributes="Bold"
            HorizontalOptions="Center" 
            VerticalOptions="Start"
            TextColor="Black"
            Margin="0,10,0,10" />

            <!-- First Section -->
            <Frame
            CornerRadius="10"
            BorderColor="Gray"
            Padding="10"
            HasShadow="True"
            HorizontalOptions="Center"
            WidthRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="GetTapped" />
                </Frame.GestureRecognizers>
                <!-- Replace the Source attribute of <Image> with the actual paths to the images/icons you want to display. -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="dotnet_bot.png" HeightRequest="80" WidthRequest="80" />
                    <Label Text="Getting Started" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

            <!-- Line between sections -->
            <BoxView HeightRequest="50" WidthRequest="2" Color="Gray" HorizontalOptions="Center" />

            <!-- Second Section -->
            <Frame
            CornerRadius="10"
            BorderColor="Gray"
            Padding="10"
            HasShadow="True"
            HorizontalOptions="Center"
            WidthRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SecTapped" />
                </Frame.GestureRecognizers>
                <!-- Replace the Source attribute of <Image> with the actual paths to the images/icons you want to display. -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="dotnet_bot.png" HeightRequest="80" WidthRequest="80" />
                    <Label Text="Types of OS" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

            <!-- Line between sections -->
            <BoxView HeightRequest="50" WidthRequest="2" Color="Gray" HorizontalOptions="Center" />

            <!-- Third Section -->
            <Frame
            CornerRadius="10"
            BorderColor="Gray"
            Padding="10"
            HasShadow="True"
            HorizontalOptions="Center"
            WidthRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ThTapped" />
                </Frame.GestureRecognizers>
                <!-- Replace the Source attribute of <Image> with the actual paths to the images/icons you want to display. -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="dotnet_bot.png" HeightRequest="80" WidthRequest="80" />
                    <Label Text="Types of OS - Detailed" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

            <!-- Line between sections -->
            <BoxView HeightRequest="50" WidthRequest="2" Color="Gray" HorizontalOptions="Center" />

            <!-- 4 Section -->
            <Frame
            CornerRadius="10"
            BorderColor="Gray"
            Padding="10"
            HasShadow="True"  
            HorizontalOptions="Center"
            WidthRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="FTapped" />
                </Frame.GestureRecognizers>
                <!-- Replace the Source attribute of <Image> with the actual paths to the images/icons you want to display. -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="dotnet_bot.png" HeightRequest="80" WidthRequest="80" />
                    <Label Text="Key Components" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

            <!-- Line between sections -->
            <BoxView HeightRequest="50" WidthRequest="2" Color="Gray" HorizontalOptions="Center" />

            <!-- 5 Section -->
            <Frame
            CornerRadius="10"
            BorderColor="Gray"
            Padding="10"
            HasShadow="True"
            HorizontalOptions="Center"
            WidthRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="FfTapped" />
                </Frame.GestureRecognizers>
                <!-- Replace the Source attribute of <Image> with the actual paths to the images/icons you want to display. -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="dotnet_bot.png" HeightRequest="80" WidthRequest="80" />
                    <Label Text="Functions" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

            <!-- Line between sections -->
            <BoxView HeightRequest="50" WidthRequest="2" Color="Gray" HorizontalOptions="Center" />

            <!-- 6 Section -->
            <Frame
            CornerRadius="10"
            BorderColor="Gray"
            Padding="10"
            HasShadow="True"
            HorizontalOptions="Center"
            WidthRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="STapped" />
                </Frame.GestureRecognizers>
                <!-- Replace the Source attribute of <Image> with the actual paths to the images/icons you want to display. -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="dotnet_bot.png" HeightRequest="80" WidthRequest="80" />
                    <Label Text="Categories of OSs" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

            <!-- Line between sections -->
            <BoxView HeightRequest="50" WidthRequest="2" Color="Gray" HorizontalOptions="Center" />

            <!-- 7 Section -->
            <Frame
            CornerRadius="10"
            BorderColor="Gray"
            Padding="10"
            HasShadow="True"
            HorizontalOptions="Center"
            WidthRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SevTapped" />
                </Frame.GestureRecognizers>
                <!-- Replace the Source attribute of <Image> with the actual paths to the images/icons you want to display. -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="dotnet_bot.png" HeightRequest="80" WidthRequest="80" />
                    <Label Text="Evolution of OSs" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

            <!-- Line between sections -->
            <BoxView HeightRequest="50" WidthRequest="2" Color="Gray" HorizontalOptions="Center" />

            <!-- 8 Section -->
            <Frame
            CornerRadius="10"
            BorderColor="Gray"
            Padding="10"
            HasShadow="True"
            HorizontalOptions="Center"
            WidthRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ETapped" />
                </Frame.GestureRecognizers>
                <!-- Replace the Source attribute of <Image> with the actual paths to the images/icons you want to display. -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="dotnet_bot.png" HeightRequest="80" WidthRequest="80" />
                    <Label Text="Replace" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

            <!-- Test Section -->
            <Frame
            CornerRadius="10"
            BorderColor="Gray"
            Padding="10"
            HasShadow="True"
            HorizontalOptions="Center"
            WidthRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTestTapped" />
                </Frame.GestureRecognizers>
                <!-- Replace the Source attribute of <Image> with the actual paths to the images/icons you want to display. -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="dotnet_bot.png" HeightRequest="80" WidthRequest="80" />
                    <Label Text="Test" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>